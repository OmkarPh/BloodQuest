<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="Profile/util.css">
	<link rel="stylesheet" type="text/css" href="Profile/main.css">
<!--===============================================================================================-->
<style type="text/css">
    .partition{
        font-size: 30px;
        font-weight: 200;
        margin: 25px;
		margin-left: 0px;
    }
	.partition *{
		margin-right: 25px;
	}
	.partition span{
		font-size: 25px;
	}
	.wildcardLinks:hover{
		color: rgb(0, 96, 175);
	}
</style>
</head>
<body>
	<div class="limiter">
		<div class="container-login100">
			{{#if message}}
			<h4 style="color: rgb(145, 255, 0);">{{message}}</h4>
			<br>
			{{/if}}
				<div class="profileEditor">
					<a style="float: right; font-size: x-large; text-decoration: underline;" href="/editProfile"><i class="fa fa-edit" aria-hidden="true"></i>Edit </a>
					<a href="/" style="font-size: x-large;" class="wildcardLinks"><- <u>Home</u> </a><br>
					<div style="float: left; padding-bottom: 20px; margin-right: 50px">
						<img src="/myDP" style="width: 200px; height:200px border-radius: 20px" id="showDP">
						<br>
					</div>
					<div class="partition">
						<span style="font-size: xx-large;">{{data.firstName}}	
						{{data.lastName}}</span><br>
						<h5 id="mailDisplay">{{data.email}}</h5>
					</div>
					<div class="partition">
						<span>Age: {{data.age}}</span>
						<span>Sex: {{sex}}</span>
						<span style="font-size:larger;">BloodType: {{blood}}</span>
					</div>
					<div class="partition">
						<span><i class="fa fa-phone" aria-hidden="true"></i>{{data.phone}}</span>
						<span><i class="fa fa-whatsapp" aria-hidden="true"></i>{{data.whatsapp}}</span>
					</div>
					<div class="partition">
						{{data.address.localAddress}}, {{data.address.pin}}
					</div>
					<div class="partition">
						{{data.address.district}}, 
						{{data.address.state}},
						{{data.address.country}}
					</div>
					<div class="partition">
						Diseases: {{data.diseaseCount}}
						<br>
						{{diseaseString}}
					</div>
					<a style="float: right; outline: none; padding: 10px; border-radius:5px; font-weight: 800; font-size: x-large;" href="/auth/logout">
						Logout !
					</a>
				</div>
		</div>
	</div>
	
	

	
<!--===============================================================================================-->	
	<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<!--===============================================================================================-->
	<script src="vendor/select2/select2.min.js"></script>
<!--===============================================================================================-->
	<script src="vendor/tilt/tilt.jquery.min.js"></script>
	<script >
		$('.js-tilt').tilt({
			scale: 1.1
		})
	</script>
<!--===============================================================================================-->
	<script src="Profile/main.js"></script>

</body>
</html>